<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<ul id="favorite-list">
    <% favoritesData.forEach(favorite => { %>
        <li>
            <h2><%= favorite.inv_year %> <%= favorite.inv_make %> <%= favorite.inv_model %></h2>
            <p>Price: $<%= favorite.inv_price %></p>
            <img src="<%= favorite.inv_thumbnail %>" alt="Thumbnail">
            <form action="/favorites/remove" method="post">
                <input type="hidden" name="inv_id" value="<%= favorite.inv_id %>">
                <button type="submit" class="remove-favorites">Remove from Favorites</button>
            </form>
        </li>
    <% }) %>
</ul>